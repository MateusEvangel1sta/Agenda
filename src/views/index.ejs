<%- include('includes/head'); %> <%- include('includes/nav') %>

<div class="container">
  <div class="row">
    <div class="col-2"></div>

    <div class="col-8 my-3">
      <h1 class="display-1 text-center">Agenda</h1>
      <p class="text-center lead">Seus contatos estão abaixo</p>

      <%- include('includes/messages') %>
      
      <% if (contacts.length > 0) { %>
        <div class="table-responsive">
          <table class="table my-3">
            <% contacts.forEach(contact => { %>
              <tr>
                <td><%= contact.name %></td>
                <td><%= contact.surname %></td>
                <td><%= contact.email %></td>
                <td><%= contact.tel %></td>
                <td>
                  <a href="/contact/index/<%= contact.id %>">Editar</a>
                </td>

                <td>
                  <a class="text-danger" href="/contact/delete/<%= contact.id %>"
                    >Exluir</a
                  >
                </td>
              </tr>
            <% }); %>
          </table>
        </div>
      <% } else { %>
        <p class="text-center">
          não existem contatos na sua agenda.
        </p>
      <% } %>
    </div>

    <div class="col-2"></div>
  </div>
</div>

<%- include('includes/footer'); %>
